{
    "extends": ["eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "emcaVersion": 2019
    },
    "rules": {
        "semi": ["error", "always"],
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "trailingComma": "es5"
            }
        ]
    }
}